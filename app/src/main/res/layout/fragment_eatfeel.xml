<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="8dp"
    tools:context=".EatFeelFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/eatfeel_txt_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/darkBlue"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:textSize="16sp"
                android:text="@string/str_eatfeel_explain"/>
            <TextView
                android:id="@+id/eatfeel_txt_desc"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:textColor="@color/red"
                android:textSize="16sp"
                android:text="@string/str_eatfeel_desc"/>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:weightSum="2">
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_marginTop="5dp"
                            android:textSize="15sp"
                            android:textColor="@android:color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="Time:"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_marginTop="5dp"
                            android:layout_gravity="center_vertical"
                            android:textSize="15sp"
                            android:textColor="@android:color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Eating/Feeling:"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/eatfeel_btn_seldate"
                        android:layout_width="match_parent"
                        android:layout_marginTop="5dp"
                        style="@style/GrayButton"
                        android:text="Today: + 20g"
                        />
                    <Button
                        android:id="@+id/eatfeel_btn_seleatfeel"
                        android:layout_width="match_parent"
                        android:layout_marginTop="5dp"
                        style="@style/GrayButton"
                        android:text="Today: + 20g"
                        />
                </LinearLayout>
            </LinearLayout>
            <Button
                android:id="@+id/eatfeel_btn_add"
                android:layout_width="match_parent"
                android:layout_marginTop="8dp"
                style="@style/BlankOrangeButton"
                android:text="Add"
                />
            <TextView
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/darkGray"
                />
            <TextView
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Graphs to identify trends; swipe left and right for more graphs."
                android:textColor="@color/darkGray"
                />
            <com.mark.sleevecoach.Helper.Gallery.ObservableHorizontalScrollView
                android:id="@+id/eatfeel_horz_scroll"
                android:fillViewport="true"
                android:layout_width="match_parent"
                android:layout_height="220dp">
                <LinearLayout
                    android:id="@+id/eatfeel_graph_contents"
                    android:orientation="horizontal"
                    android:layout_width="400dp"
                    android:layout_height="match_parent">
                    <com.github.mikephil.charting.charts.BarChart
                        android:id="@+id/eatfeel_chart_eat"
                        android:layout_width="300dp"
                        android:layout_height="match_parent"
                        />
                    <com.github.mikephil.charting.charts.PieChart
                        android:id="@+id/eatfeel_chart_cheatwith"
                        android:layout_width="300dp"
                        android:layout_height="match_parent"
                        />
                    <com.github.mikephil.charting.charts.PieChart
                        android:id="@+id/eatfeel_chart_feelingwhen"
                        android:layout_width="300dp"
                        android:layout_height="match_parent"
                        />
                    <com.github.mikephil.charting.charts.BarChart
                        android:id="@+id/eatfeel_chart_feature"
                        android:layout_width="300dp"
                        android:layout_height="match_parent"
                        />
                </LinearLayout>
            </com.mark.sleevecoach.Helper.Gallery.ObservableHorizontalScrollView>
            <com.mark.sleevecoach.Helper.Gallery.GalleryNavigator
                android:id="@+id/eatfeel_nav_chart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>